// {{ current.color-list-description }}
$colors: {{ colors | join: ', ' }};


// {{ current.color-pairs-description }}
@mixin colors($scheme: black-on-white) {
  {% for pair in current.pairs %} @if ($scheme == {% include site/atoms/classname.html title=pair.name %}) {
      color: ${{ pair.foreground }};
      background-color: ${{ pair.background }};
  }{% endfor %}
}

{% capture pairs %}{% for pair in current.pairs %}{% include site/atoms/classname.html title=pair.name %},{% endfor %}{% endcapture %}{% assign pairs = pairs | split: ',' %}
// {{ current.color-pairs-list-description }}
$color-pairs: {{ pairs | join: ', ' }};