@mixin responsive-typography {
  font-size: $font-size-laptop;
  line-height: $line-height;
  $lem: $lem;
    
  @include portrait {
    font-size: $font-size-tablet;  
  } 
  
  @include large-screen-and-up {
    font-size: $font-size-desktop;  
  }
}